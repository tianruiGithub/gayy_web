- if flash and flash.any?
  - flash.each do |key, value|
    - if key == "success"
      .alert.alert-success.alert-dismissable.ml-alert-success
        %button{:type => "button", :class => "close", "data-dismiss" => "alert", "aria-hidden" => "true"}= "&times;".html_safe
        .alert-wrapper
          = value
    - elsif key == "error"
      .alert.alert-danger.alert-dismissable.ml-alert-error
        %button{:type => "button", :class => "close", "data-dismiss" => "alert", "aria-hidden" => "true"}= "&times;".html_safe
        .alert-wrapper
          = value
    - else
      .alert.alert-info.alert-dismissable.ml-alert-info
        %button{:type => "button", :class => "close", "data-dismiss" => "alert", "aria-hidden" => "true"}= "&times;".html_safe
        .alert-wrapper
          = value
